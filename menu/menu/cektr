#!/usr/bin/env bash

# Define color codes
DF='\e[39m'
Bold='\e[1m'
yell='\e[33m'
red='\e[31m'
green='\e[32m'
blue='\e[34m'
PURPLE='\e[35m'
cyan='\e[36m'
Lred='\e[91m'
Lgreen='\e[92m'
Lyellow='\e[93m'
NC='\e[0m'
header_color='\e[1;96m'
line_color='\e[1;94m'
highlight='\e[1;97;41m'
banner_color='\e[1;92m'

clear

# Function to convert bytes
con() {
    bytes=$1
    if [ "$bytes" -lt 1024 ]; then
        echo "${bytes}B"
    elif [ "$bytes" -lt $((1024 * 1024)) ]; then
        echo "$(( (bytes + 1023) / 1024 ))KB"
    elif [ "$bytes" -lt $((1024 * 1024 * 1024)) ]; then
        echo "$(( (bytes + 1048575) / 1048576 ))MB"
    else
        echo "$(( (bytes + 1073741823) / 1073741824 ))GB"
    fi
}

# Read usernames with '#!' tag for Trojan
mapfile -t data < <(grep '^#!' /etc/xray/config.json | awk '{print $2}' | sort -u)

# Header
echo -e "${line_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e " ${highlight}                           CEK TROJAN ACCOUNT                             ${NC}"
echo -e "${line_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
printf "${header_color}%-15s %-20s %-15s %-15s %-10s\n${NC}" "USERNAME" "LOGIN" "USAGE QUOTA" "LIMIT QUOTA" "LIMIT IP"
echo -e "${line_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# Loop through Trojan users
for akun in "${data[@]}"; do
    [ -z "$akun" ] && continue

    mapfile -t ip_list < <(
        grep -F -w "$akun" /var/log/xray/access.log | tail -n500 \
        | awk '{print $3}' | sed 's/tcp:\/\///g; s/:.*//' | sort -u | grep -v "^$"
    )
    count=${#ip_list[@]}
    [ "$count" -eq 0 ] && continue

    iplimit_file="/etc/klmpk/limit/trojan/ip/${akun}"
    byte_file="/etc/trojan/${akun}"
    usage_file="/etc/limit/trojan/${akun}"

    iplimit=$([ -f "$iplimit_file" ] && cat "$iplimit_file" || echo "-")
    byte=$([ -f "$byte_file" ] && cat "$byte_file" || echo 0)
    usage=$([ -f "$usage_file" ] && cat "$usage_file" || echo 0)

    lim=$(con "$byte")
    gb=$(con "$usage")

    printf "${green}%-15s ${blue}%-20s ${cyan}%-15s ${PURPLE}%-15s ${red}%-10s\n${NC}" \
        "$akun" "$count IP" "$gb" "$lim" "$iplimit IP"
done

# Footer
echo ""
echo -e "${line_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${banner_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "                  ${Bold}${cyan}Selamat menggunakan script by Andyyuda${NC}"
echo -e "${banner_color}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
