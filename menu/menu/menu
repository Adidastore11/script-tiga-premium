########### TYPEWRITER FUNCTION
typewriter() {
  local delay="${2:-0.07}"
  while IFS= read -r line; do
    for ((i=0; i<${#line}; i++)); do
      echo -ne "${BOLD}${CYAN}${line:$i:1}${NC}"
      sleep $delay
    done
    echo ""
  done <<< "$1"
}

