# Get version from GitHub

loading() {
  local duration=$1
  local interval=0.2
  local elapsed=0
  local spin='-\|/'

  while (( elapsed < duration )); do
    local temp=${spin#?}
    printf "[%c] Updating..." "$spin"
    spin=$temp${spin%"$temp"}
    sleep "$interval"
    printf "\r"
    (( elapsed++ ))
  done
  echo "Update Completed!"
}

VERSION_GITHUB=$(curl -sSL https://raw.githubusercontent.com/Adidastore11/P/main/versionbaru)
VERSION_LOCAL=$(cat /usr/local/sbin/version)

# Cek versi
if [[ "$VERSION_LOCAL" != "$VERSION_GITHUB" ]]; then
    echo -e "${Lyellow}Versi saat ini: ${LRED}$VERSION_LOCAL${NC}"
    echo -e "${Lgreen}Versi terbaru: ${Lyellow}$VERSION_GITHUB${NC}"
    read -p "Apakah ingin melakukan update? (y/yes): " response
    if [[ "$response" == "y" || "$response" == "yes" ]]; then
        echo -e "${green}Memulai update...${NC}"
        (wget -q https://raw.githubusercontent.com/Adidastore11/P/main/menu/update.sh && chmod +x update.sh && ./update.sh) >/dev/null 2>&1 &

        loading 300

        echo -e "${Lgreen}Update selesai.${NC}"

        echo "$VERSION_GITHUB" > /usr/local/sbin/version
        echo -e "${Lgreen}Versi lokal diperbarui ke $VERSION_GITHUB${NC}"

        sleep 2
        clear
        /usr/local/sbin/menus
    else
        echo -e "${LRED}Update dibatalkan.${NC}"
        sleep 2
        clear
        /usr/local/sbin/menus
    fi
else
    echo -e "${Lgreen}Versi sudah terbaru.${NC}"
fi