# ============================
# TYPEWRITER ANIMASI
# ============================

typewriter() {
  local text="$1"
  local delay="${2:-0.07}"  # default 0.07 detik per huruf
  for ((i=0; i<${#text}; i++)); do
    echo -ne "${BOLD}${CYAN}${text:$i:1}${NC}"
    sleep $delay
  done
  echo ""
}

# Animasi typewriter: TULISAN BESAR & KANJI
clear
echo -e "\n\n"
